---
const { product } = Astro.props; // Obtenemos el producto que se pasa como prop
---

<div class="border border-gray-100 rounded-lg shadow-[0_1px_2px_0_rgba(0,0,0,0.12)] p-6 mb-5 hover:shadow-md transition-shadow duration-300 text-center">
  <img src={product.imageUrl} alt={product.name} class="w-full h-48 object-cover rounded-lg"/>
  <hr class="border-gray-200 w-full">
  <h2 class="text-lg font-semibold mt-4">{product.name}</h2>
  <p class="text-gray-600 my-2 text-left">{product.description}</p>
  <p class="text-black-600 text-lg font-semibold first-line text-left">${product.price}</p>
</div>
