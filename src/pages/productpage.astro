---
import Navbar from '../components/navbar.astro';
const productId = 'someProductId'; // Puedes obtener el ID del producto de alguna forma (URL, props, etc.)
let product: any = null; /* Arreglar esto */

const getProductDetails = async () => {
  const response = await fetch(`https://commercial-api.vulktech.com/products/${productId}`);
  if (response.ok) {
    product = await response.json();
  }
};
getProductDetails();
---

<html>
  <head>
    <title>Detalles del Producto</title>
  </head>
  <body>
    <Navbar />
    <div class="container">
      <h1>Detalles del Producto</h1>
      {product ? (
        <div>
          <h2>{product.name}</h2>
          <p>{product.description}</p>
          <p>${product.price}</p>
        </div>
      ) : (
        <p>Cargando detalles...</p>
      )}
    </div>
  </body>
</html>
