<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../styles/register.css">
  <title>Registro</title>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>Registrate</h1>
    </div>
    <form id="registerForm">
      <input
        type="text"
        id="email"
        placeholder="Correo electrónico"
        required
      />
      <input
        type="password"
        id="password"
        placeholder="Contraseña"
        required
      />
      <input type="button" value="Registrar" id="registerButton" />
    </form>

    <div id="message" class="message"></div>

    <p>¿Ya tenés cuenta? <a href="/login">Ingresar aquí</a></p>
  </div>

  <script type="module">
    const registerButton = document.getElementById('registerButton');
    const emailInput = document.getElementById('email');
    const passwordInput = document.getElementById('password');
    const messageElement = document.getElementById('message');

    registerButton.addEventListener('click', async () => {
      const email = emailInput.value;
      const password = passwordInput.value;
      let message = '';

      // Validación de email
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        message = "Por favor, introduce un correo electrónico válido.";
        messageElement.textContent = message;
        return;
      }

      // Validación de contraseña
      if (password.length < 6) {
        message = 'La contraseña debe tener al menos 6 caracteres.';
        messageElement.textContent = message;
        return;
      }

      // Llamada a la API para registrar
      try {
        const res = await fetch('http://localhost:5000/api/users/register', {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ email, password }),
        });

        if (res.ok) {
          message = "Registro exitoso. Redirigiendo...";
          messageElement.textContent = message;

          setTimeout(() => {
            window.location.href = '/login'; // Redirige a la página de login después de 2 segundos
          }, 2000);
        } else {
          const error = await res.text();
          message = `Error: ${error}`;
          messageElement.textContent = message;
        }
      } catch (error) {
        message = "Error en la conexión";
        messageElement.textContent = message;
        console.error("Error:", error);
      }
    });
  </script>
</body>
</html>
